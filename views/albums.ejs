<%- include('partials/header') %>
<link rel="stylesheet" href="/css/albums.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container album-container">
    <div class="mb-3">
        <label for="sort" class="form-label">Sort by:</label>
        <select name="sort" id="sort" class="form-select"
            onchange="location = '/albums?page=<%= currentPage %>&sort=' + this.value;">
            <option value="default" <% if (sortOption === 'default') { %>selected<% } %>>Default</option>
            <option value="title" <% if (sortOption === 'title') { %>selected<% } %>>Title</option>
            <option value="artist" <% if (sortOption === 'artist') { %>selected<% } %>>Artist</option>
        </select>
    </div>
    <div class="row">
        <% albums.forEach(function(album) { %>
        <div class="col-md-3 g-3">
            <div class="card album-card">
                <img src="<%= album.coverImage %>" class="card-img-top" alt="<%= album.title %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= album.name %>
                    </h5>
                    <p class="card-text">
                        <%= album.artist %>
                    </p>
                    <p class="card-text">
                        Rank: #<%= album.rank %>
                    </p>
                    <p hidden class="albumId">
                        <%- album._id.toString() %>
                    </p>
                    <button class="btn btn-outline-secondary add-to-cart">Add to Cart</button>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <!-- Pagination links -->
    <nav class="navbar pagination" aria-label="Page navigation">
        <ul class="pagination">
            <% if (currentPage > 1) { %>
            <li class="page-item">
                <a class="page-link" href="/albums?page=<%= currentPage - 1 %>" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
            <% if (i === currentPage) { %>
            <li class="page-item active" aria-current="page">
                <a class="page-link" href="#"><%= i %></a>
            </li>
            <% } else { %>
            <li class="page-item">
                <a class="page-link" href="/albums?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
            <% } %>

            <% if (currentPage < totalPages) { %>
            <li class="page-item">
                <a class="page-link" href="/albums?page=<%= currentPage + 1 %>" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
            <% } %>
        </ul>
    </nav>
</div>
<%- include('partials/footer') %>