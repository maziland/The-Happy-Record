<%- include('partials/header') %>
<link rel="stylesheet" href="/css/checkout.css">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<div class="container col-md-8">
    <h1>Checkout</h1>
    <section class="h-100 h-custom">
        <!-- <div class="container py-5 h-100"> -->
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card">
                    <div class="card-body p-4">
                        <div class="row">

                            <!-- Continue shopping -->
                            <div class="col-lg-8">
                                <h5 class="mb-3"><a href="/albums" class="text-body"><i
                                            class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping</a></h5>
                                <hr>
                            </div>

                            <!-- Cart -->
                            <section class="h-100 h-custom">
                                <div class="container h-100 py-3">
                                    <div class="row d-flex justify-content-center align-items-center h-100">
                                        <div class="col">
                                            <!-- Cart items table -->
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" class="h5">Album</th>
                                                            <th scope="col">Artist</th>
                                                            <th scope="col">Quantity</th>
                                                            <th scope="col">Price</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="checkout-cart-body">
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">

                                            <div class="card bg-primary text-white rounded-3">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                                        <h5 class="mb-0">Card details</h5>
                                                    </div>
                                                    <!-- Card types -->
                                                    <div>
                                                        <p class="small mb-2">Card type</p>
                                                        <a href="#!" type="submit" class="text-white"><i
                                                                class="fab fa-cc-mastercard fa-2x me-2"></i></a>
                                                        <a href="#!" type="submit" class="text-white"><i
                                                                class="fab fa-cc-visa fa-2x me-2"></i></a>
                                                        <a href="#!" type="submit" class="text-white"><i
                                                                class="fab fa-cc-amex fa-2x me-2"></i></a>
                                                        <a href="#!" type="submit" class="text-white"><i
                                                                class="fab fa-cc-paypal fa-2x"></i></a>
                                                    </div>

                                                    <!-- Form -->
                                                    <form action="/checkout" name="checkout-form" id="checkoutForm"
                                                        class="mt-4" method="post">
                                                        <div class="form-outline form-white mb-4">
                                                            <input name="cardholder" type="text" id="cardHolder"
                                                                class="form-control" <% if (creditCard) { %>
                                                                <%= `value=${creditCard.holder}` %> <% }; %>
                                                                placeholder="Cardholder's Name" />
                                                            <label class="form-label" for="cardHolder">Cardholder's
                                                                Name</label>
                                                            <div class="error-message"></div>
                                                        </div>

                                                        <div class="form-outline form-white mb-4">
                                                            <input name="cardnumber" type="text" id="cardNumber"
                                                                class="form-control" <% if (creditCard) { %>
                                                                <%= `value=${creditCard.number}` %>
                                                                <% }; %>placeholder="1234 5678 9012 3457" minlength="19"
                                                                maxlength="19" />
                                                            <label class="form-label" for="cardNumber">Card
                                                                Number</label>
                                                            <div class="error-message"></div>
                                                        </div>

                                                        <div class="row mb-4">
                                                            <div class="col-md-6">
                                                                <div class="form-outline form-white">
                                                                    <input name="expiration" type="text"
                                                                        id="expirationDate" class="form-control"
                                                                        <% if (creditCard) { %>
                                                                        <%= `value=${creditCard.exp}` %>
                                                                        <% }; %>placeholder="MM/YYYY" size="7" id="exp"
                                                                        minlength="7" maxlength="7" />
                                                                    <label class="form-label"
                                                                        for="expirationDate">Expiration</label>
                                                                    <div class="error-message"></div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="form-outline form-white">
                                                                    <input name="cvv" type="password" id="cvv"
                                                                        class="form-control" <% if (creditCard) { %>
                                                                        <%= `value=${creditCard.cvv}` %>
                                                                        <% }; %>placeholder="&#9679;&#9679;&#9679;"
                                                                        size="1" minlength="3" maxlength="3" />
                                                                    <label class="form-label" for="cvv">CVV</label>
                                                                    <div class="error-message"></div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <hr class="my-4">

                                                        <div class="d-flex justify-content-between mb-4">
                                                            <p class="mb-2">Total(Incl. taxes)</p>
                                                            <p class="total-price mb-2"></p>
                                                        </div>

                                                        <button type="button" id="submit-checkout-button"
                                                            class="btn btn-info btn-block btn-lg">
                                                            <div class="d-flex justify-content-between">
                                                                <span class="total-price"></span>
                                                                <span> Checkout<i
                                                                        class="fas fa-long-arrow-alt-right ms-2"></i></span>
                                                            </div>
                                                        </button>
                                                    </form>


                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- Checkout -->

                        </div>

                    </div>
                </div>
            </div>
        </div>
</div>
</section>
</div>
<script src="/js/checkout.js"></script>
<%- include('partials/footer') %>